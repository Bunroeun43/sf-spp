					<td>Disque dur</td>
					<td>{{ configurateur.disquedur.marque.nom }}</td>
					<td>{{ configurateur.disquedur.modele }}</td>
					<td class="text-end">{{ configurateur.disquedur.prix }}
						€</td>
				</tr>
				<tr>
					<td>Quantité</td>
