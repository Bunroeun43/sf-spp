{% extends 'base.html.twig' %}

{% block title %}Liste des disque SSD
{% endblock %}

{% block body %}
	<div class="page ssd">
		<h1>Liste des disque SSD</h1>

		<div class="row row-cols-1 row-cols-md-4 g-4">
			{% for disque_ssd in disque_ssds|sort((a, b) => a.marque.nom <=> b.marque.nom) %}
				<div class="col">
					<div class="card" style="width: 18rem;">
						<img src="{{ asset('uploads/images/') }}{{ disque_ssd.photo ? disque_ssd.photo : "nc.png" }}" class="card-img-top" alt="...">
						<div class="card-body">
							<h5 class="card-title text-center text-dark">{{ disque_ssd.marque.nom|upper }}
								<p>{{ disque_ssd.modele|capitalize }}</p>
							</h5>
							{# <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p> #}
						</div>
						<ul class="list-group list-group-flush">
							<li class="list-group-item">Capacité :
								{{ disque_ssd.capacite }}
								Go</li>
							<li class="list-group-item">Prix :
								{{ disque_ssd.prix }}
								€</li>
						</li>
					</ul>
					<div class="card-body text-center">
						<a href="{{ path('app_carte_mere_show', {'id': disque_ssd.id}) }}" class="btn btn-light btn-crud">Afficher</a>
						<a href="{{ path('app_carte_mere_edit', {'id': disque_ssd.id}) }}" class="btn btn-warning btn-crud">Modifier</a>
					</div>
				</div>
			</div>
	{% else %}
		</div>
	{% endfor %}
</div>
<div class="text-center">
	<a href="{{ path('app_disque_ssd_new') }}" class="btn btn-primary btn-create bg-perso">Nouveau disque SSD</a>
</div>{% endblock %}
