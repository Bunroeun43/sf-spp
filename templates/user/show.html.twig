{% extends 'base.html.twig' %}

{% block title %}Utilisateur
{% endblock %}

{% block body %}
	<div class="page">
		<h1>Utilisateur</h1>

		<table class="table">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ user.id }}</td>
				</tr>
				<tr>
					<th>Email</th>
					<td>{{ user.email }}</td>
				</tr>
				<tr>
					<th>Roles</th>
					<td>{{ user.roles ? user.roles|json_encode : '' }}</td>
				</tr>
				<tr>
					<th>Nom</th>
					<td>{{ user.nom}}</td>
				</tr>
				<tr>
					<th>Prénom</th>
					<td>{{ user.prenom }}</td>
				</tr>
				<tr>
					<th>Date de naissance</th>
					<td>{{ user.naissance|date('d-m-y') }}</td>
				</tr>
				<tr>
					<th>Genre</th>
					<td>{{ user.genre.nom}}</td>
				</tr>
				<tr>
					<th>Adresse</th>
					<td>{{ user.adresse }}</td>
				</tr>
				<tr>
					<th>Code postal</th>
					<td>{{ user.codepostal }}</td>
				</tr>
				<tr>
					<th>Ville</th>
					<td>{{ user.ville }}</td>
				</tr>
				<tr>
					<th>Téléphone</th>
					<td>{{ user.telephone }}</td>
				</tr>
			</tbody>
		</table>

		<a href="{{ path('app_user_index') }}" class="btn btn-primary">retour à la liste</a>

		<a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-warning btn-crud">modifier</a>

		{{ include('user/_delete_form.html.twig') }}
	</div>

{% endblock %}
